{
	"name": "vpx-js",
	"version": "1.2.0",
	"description": "Visual Pinball for Node.js and the Browser",
	"main": "dist/lib/index.js",
	"types": "dist/lib/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/vpdb/vpx-js"
	},
	"scripts": {
		"build": "npm run compile && rimraf dist && tsc && npm run build:cp",
		"build:watch": "npm run compile && npm run build:cp && tsc --watch",
		"build:cp": "cp -r res/maps dist/res && cp -r res/meshes dist/res",
		"compile": "nearleyc lib/scripting/vbscript.ne -o lib/scripting/vbscript.ts",
		"lint": "tslint lib/**/*.ts --format stylish",
		"test": "npm run compile && nyc mocha"
	},
	"bin": {
		"vbs2js": "./dist/bin/vbs2js.js",
		"vpt2glb": "./dist/bin/vpt2glb.js",
		"vptscript": "./dist/bin/vptscript.js"
	},
	"files": [
		"dist"
	],
	"browser": {
		"./dist/lib/refs.node.js": "./dist/lib/refs.browser.js"
	},
	"keywords": [
		"pinball",
		"visual pinball",
		"vp10",
		"vpx",
		"glb",
		"gltf"
	],
	"author": "freezy <freezy@vpdb.io>",
	"license": "GPL-2.0",
	"dependencies": {
		"buffer": "^5.4.2",
		"es6-promise-pool": "^2.5.0",
		"escodegen": "^1.12.0",
		"estraverse": "^4.3.0",
		"gltf-pipeline": "github:freezy/gltf-pipeline#hotfix/dedupe",
		"gm": "^1.23.1",
		"moo": "^0.5.0",
		"pngquant": "^3.0.0",
		"sharp": "^0.23.0",
		"text-encoding": "^0.7.0",
		"three": "^0.108.0"
	},
	"devDependencies": {
		"@types/chai": "4.2.3",
		"@types/escodegen": "0.0.6",
		"@types/estraverse": "0.0.6",
		"@types/estree": "0.0.39",
		"@types/gm": "1.18.4",
		"@types/microtime": "2.1.0",
		"@types/mocha": "5.2.7",
		"@types/moo": "0.5.0",
		"@types/nearley": "2.11.0",
		"@types/node": "12.7.8",
		"@types/sharp": "0.22.2",
		"@types/sinon": "7.0.13",
		"@types/sinon-chai": "3.2.3",
		"chai": "4.2.0",
		"esm": "3.2.25",
		"looks-same": "7.2.1",
		"microtime": "3.0.0",
		"mocha": "6.2.0",
		"nearley": "2.18.0",
		"nyc": "14.1.1",
		"rimraf": "3.0.0",
		"sinon": "7.4.2",
		"sinon-chai": "3.3.0",
		"ts-node": "8.4.1",
		"tslint": "5.20.0",
		"typescript": "3.6.3"
	},
	"bugs": {
		"url": "https://github.com/vpdb/vpx-js/issues"
	},
	"homepage": "https://github.com/vpdb/vpx-js#readme",
	"nyc": {
		"require": [
			"ts-node/register"
		],
		"exclude": [
			"res/**",
			"bin/**",
			"test/**",
			"lib/**/*.spec.ts",
			"lib/gltf/gltf-exporter.ts",
			"lib/util/logger.ts",
			"lib/render/threejs/vendor/**"
		],
		"extension": [
			".ts"
		],
		"reporter": [
			"lcov",
			"text-summary"
		],
		"sourceMap": true,
		"instrument": true
	}
}

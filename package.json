{
	"name": "vpx-toolbox",
	"version": "1.2.0",
	"description": "A set of utils to deal with Visual Pinball files.",
	"main": "dist/lib/index.js",
	"types": "dist/lib/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/vpdb/vpx-toolbox"
	},
	"scripts": {
		"build": "rimraf dist && tsc && cp -r res/maps dist/res",
		"build:watch": "tsc --watch",
		"lint": "tslint lib/**/*.ts --format stylish",
		"test": "nyc mocha"
	},
	"bin": {
		"vpt2glb": "./dist/bin/vpt2glb.js",
		"vptscript": "./dist/bin/vptscript.js"
	},
	"files": [
		"dist"
	],
	"browser": {
		"./dist/lib/refs.node.js": "./dist/lib/refs.browser.js"
	},
	"keywords": [
		"pinball",
		"visual pinball",
		"vp10",
		"vpx",
		"glb",
		"gltf"
	],
	"author": "freezy <freezy@vpdb.io>",
	"license": "GPL-2.0",
	"dependencies": {
		"buffer": "^5.2.1",
		"es6-promise-pool": "^2.5.0",
		"gltf-pipeline": "github:freezy/gltf-pipeline#hotfix/dedupe",
		"gm": "^1.23.1",
		"pngquant": "^3.0.0",
		"sharp": "^0.22.1",
		"three": "^0.106.0"
	},
	"devDependencies": {
		"@types/chai": "4.1.7",
		"@types/gm": "1.18.3",
		"@types/microtime": "^2.1.0",
		"@types/mocha": "5.2.7",
		"@types/node": "12.6.1",
		"@types/sharp": "0.22.2",
		"@types/sinon": "7.0.13",
		"@types/sinon-chai": "^3.2.2",
		"chai": "4.2.0",
		"esm": "3.2.25",
		"looks-same": "7.2.1",
		"microtime": "^3.0.0",
		"mocha": "6.1.4",
		"nyc": "14.1.1",
		"rimraf": "2.6.3",
		"sinon": "7.3.2",
		"sinon-chai": "^3.3.0",
		"ts-node": "8.3.0",
		"tslint": "5.18.0",
		"typescript": "3.5.3"
	},
	"bugs": {
		"url": "https://github.com/vpdb/vpx-toolbox/issues"
	},
	"homepage": "https://github.com/vpdb/vpx-toolbox#readme",
	"nyc": {
		"require": [
			"ts-node/register"
		],
		"exclude": [
			"res/**",
			"bin/**",
			"test/**",
			"lib/gltf/gltf-exporter.ts",
			"lib/util/logger.ts"
		],
		"extension": [
			".ts"
		],
		"reporter": [
			"lcov",
			"text-summary"
		],
		"sourceMap": true,
		"instrument": true
	}
}

{
	"name": "vpx-toolbox",
	"version": "1.1.3",
	"description": "A set of utils to deal with Visual Pinball files.",
	"main": "dist/lib/index.js",
	"types": "dist/lib/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/vpdb/vpx-toolbox"
	},
	"scripts": {
		"build": "rimraf dist && tsc && cp -r res/maps dist/res",
		"lint": "tslint lib/**/*.ts --format stylish",
		"test": "nyc mocha"
	},
	"bin": {
		"vpt2glb": "./dist/bin/vpt2glb.js",
		"vptscript": "./dist/bin/vptscript.js"
	},
	"keywords": [
		"visual pinball",
		"vp10",
		"vpx"
	],
	"author": "freezy <freezy@vpdb.io>",
	"license": "GPL-2.0",
	"dependencies": {
		"es6-promise-pool": "2.5.0",
		"gltf-pipeline": "github:freezy/gltf-pipeline#hotfix/dedupe",
		"gm": "1.23.1",
		"pngquant": "2.0.1",
		"sharp": "0.22.1",
		"three": "0.104.0"
	},
	"devDependencies": {
		"@types/chai": "4.1.7",
		"@types/gm": "1.18.2",
		"@types/mocha": "5.2.6",
		"@types/node": "11.13.10",
		"@types/sharp": "0.22.1",
		"chai": "4.2.0",
		"esm": "3.2.22",
		"mocha": "6.1.4",
		"nyc": "14.1.0",
		"rimraf": "2.6.3",
		"ts-node": "8.1.0",
		"tslint": "5.16.0",
		"typescript": "3.4.5"
	},
	"bugs": {
		"url": "https://github.com/vpdb/vpx-toolbox/issues"
	},
	"homepage": "https://github.com/vpdb/vpx-toolbox/issues#readme",
	"nyc": {
		"require": [
			"ts-node/register"
		],
		"exclude": [
			"res/**",
			"bin/**",
			"test/**",
			"lib/gltf/gltf-exporter.ts"
		],
		"extension": [
			".ts"
		],
		"reporter": [
			"lcov",
			"text-summary"
		],
		"sourceMap": true,
		"instrument": true
	}
}
